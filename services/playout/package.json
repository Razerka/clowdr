{
    "name": "clowdr-playout",
    "version": "1.0.0",
    "description": "Broadcast playout service",
    "main": "build/server.js",
    "scripts": {
        "prebuild": "rimraf build",
        "build": "npm run build-shared && nest build",
        "build-shared": "npm run --prefix=../../ --workspace=shared build",
        "gql-cdg": "npx --no-install -p @graphql-codegen/cli graphql-codegen -- --config codegen.js",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node build/src/main",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/clowdr-app/clowdr.git"
    },
    "keywords": [
        "clowdr"
    ],
    "author": "Ross Gardiner",
    "license": "BSD-3-Clause",
    "bugs": {
        "url": "https://github.com/clowdr-app/clowdr/issues"
    },
    "homepage": "https://github.com/clowdr-app/clowdr#readme",
    "dependencies": {
        "@apollo/client": "^3.4.1",
        "@aws-cdk/aws-cloudfront": "^1.116.0",
        "@aws-cdk/aws-cloudfront-origins": "^1.116.0",
        "@aws-cdk/aws-medialive": "^1.116.0",
        "@aws-cdk/aws-mediapackage": "^1.116.0",
        "@aws-cdk/core": "^1.116.0",
        "@aws-sdk/client-cloudformation": "^3.24.0",
        "@aws-sdk/client-medialive": "^3.24.0",
        "@aws-sdk/client-mediapackage": "^3.24.0",
        "@aws-sdk/client-sns": "^3.24.0",
        "@aws-sdk/types": "^3.22.0",
        "@clowdr-app/shared-types": "file:../../shared",
        "@eropple/nestjs-bunyan": "^0.5.7",
        "@eropple/nestjs-bunyan-logger": "^0.1.1",
        "@golevelup/nestjs-hasura": "^1.3.0",
        "@graphql-codegen/cli": "^1.21.8",
        "@graphql-codegen/fragment-matcher": "^2.0.1",
        "@graphql-codegen/introspection": "^1.18.2",
