    "engines": {
        "node": "16.x",
        "npm": "^7.8.x"
    },
    "devDependencies": {
        "@nestjs/schematics": "^8.0.2",
        "@nestjs/testing": "^8.0.5",
        "@types/supertest": "^2.0.11",
        "node-env-run": "^4.0.2",
        "ts-jest": "^27.0.4",
        "ts-node": "^10.1.0",
        "tsc-watch": "^4.4.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
