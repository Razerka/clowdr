        "@graphql-codegen/typescript-graphql-request": "^3.2.5",
        "@graphql-codegen/typescript-operations": "^1.18.4",
        "@nestjs/cli": "^8.1.0",
        "@nestjs/common": "^8.0.5",
        "@nestjs/config": "^1.0.1",
        "@nestjs/core": "^8.0.5",
        "@nestjs/platform-express": "^8.0.5",
        "@nestjs/schedule": "^1.0.1",
        "@types/bunyan": "^1.8.7",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/jest": "^26.0.24",
