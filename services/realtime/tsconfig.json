{
    "extends": "../tsconfig.base.json",
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "jest.config.ts"],
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./build/",
        "rootDir": "./src/",
        "composite": true,

        "strictPropertyInitialization": true,

        "plugins": [{ "transform": "typescript-is/lib/transform-inline/transformer" }]
    }
}
