{
    "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.tsx", "types", "public/js/ServiceWorker.ts"],
    "exclude": ["./build"],
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ES2020",
        "module": "ES2020",
        "lib": ["ES2020"],
        "jsx": "preserve",
        "moduleResolution": "node",
        "composite": true,
        /* paths - If you configure Snowpack import aliases, add them here. */
        // "paths": {
        //     "@clowdr-app/shared-types": ["../packages/shared/build"]
        // },
        /* noEmit - Snowpack builds (emits) files, not tsc. */
        "noEmit": true,
        /* Additional Options */
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "importsNotUsedAsValues": "error",
        "plugins": [{ "transform": "typescript-is/lib/transform-inline/transformer" }]
    },
    "references": [{ "path": "../packages/shared" }]
}
